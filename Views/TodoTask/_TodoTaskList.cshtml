<script src="/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#createTodoTask").on("click", function (e) {
            e.preventDefault();
            $.ajax({
                url: "/TodoTask/Create",
                method: "GET",
                success: function (data) {
                    $("#part-3").html(data);
                },
                error: function (error) {
                    console.error("Erro ao carregar a partial view: " + error);
                }
            });
        });
    });
</script>